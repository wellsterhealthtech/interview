{
	"name": "@interview/api",
	"description": "Interview Rest API powered by Fastify",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/wellsterhealthtech/interview.git",
		"directory": "apps/api"
	},
	"scripts": {
		"start": "pnpm build && fastify start -l info dist/app.js",
		"build": "tsdown",
		"watch": "tsdown --watch",
		"dev": "pnpm build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm:watch\" \"pnpm:dev:start\"",
		"dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js"
	},
	"dependencies": {
		"@fastify/autoload": "catalog:api",
		"@fastify/sensible": "catalog:api",
		"fastify": "catalog:api",
		"fastify-cli": "catalog:api",
		"fastify-plugin": "catalog:api"
	},
	"devDependencies": {
		"@interview/tsconfig": "workspace:*",
		"@types/node": "catalog:",
		"concurrently": "catalog:api",
		"fastify-tsconfig": "catalog:api",
		"tsdown": "catalog:api",
		"typescript": "catalog:"
	}
}
